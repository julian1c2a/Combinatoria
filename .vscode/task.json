{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Build",
      "type": "shell",
      "command": "cmake --build build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Builds the project using CMake."
    },
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake -S . -B build",
      "group": "build",
      "problemMatcher": [],
      "detail": "Configures the project using CMake."
    },
    {
      "label": "CMake: Clean",
      "type": "shell",
      "command": "cmake --build build --target clean",
      "group": "build",
      "problemMatcher": [],
      "detail": "Cleans the project build directory."
    },
    {
      "label": "CMake: Rebuild",
      "type": "shell",
      "command": "cmake -S . -B build && cmake --build build",
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Reconfigures and rebuilds the project."
    }
  ]
}
